<?xml version="1.0"?>
<configuration>

  <property>
    <name>dfs.replication</name>
    <value>2</value>
  </property>

  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:/dxhouse/hadoop/dfs/name</value>
  </property>

  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:/dxhouse/hadoop/dfs/data</value>
  </property>

<!-- Explicitly bind RPC and HTTP to dx-master -->
  <property>
    <name>dfs.namenode.rpc-address</name>
    <value>dx-master:8020</value>
  </property>

  <property>
    <name>dfs.namenode.http-address</name>
    <value>dx-master:9870</value>
  </property>

  <property>
    <name>dfs.datanode.address</name>
    <value>0.0.0.0:9866</value>
  </property>

  <property>
    <name>dfs.datanode.http.address</name>
    <value>0.0.0.0:9864</value>
  </property>

  <property>
    <name>dfs.datanode.ipc.address</name>
    <value>0.0.0.0:9867</value>
  </property>

  <!-- allow HDFS to use the KMS for key provider -->
  <property>
    <name>dfs.encryption.key.provider.uri</name>
    <value>kms://http@dx-master:9600/kms</value>
  </property>

  <property>
    <n>hadoop.security.key.provider.path</n>
    <value>kms://http@dx-master:9600/kms</value>
  </property>

</configuration>


